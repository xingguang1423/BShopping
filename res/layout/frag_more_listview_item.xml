<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    
    
    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:visibility="gone" />
    
    <!-- 由代码控件的MoreItem -->
    <RelativeLayout
        android:id="@+id/ll_more_content"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_white2gray_sel" >


        <TextView
            android:id="@+id/tv_more_leftText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="字号大小"
            android:textSize="@dimen/home_txttitlesize" />

         <TextView
            android:id="@+id/tv_more_righttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="中字号"
             android:layout_marginRight="40dp"
            android:textColor="@color/bg_gray_ccc"
            android:textSize="@dimen/home_txtmediumtitlesize" />
        
        
         <ImageView
             android:id="@+id/iv_more_rightImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
             />
        
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray" />

</LinearLayout>