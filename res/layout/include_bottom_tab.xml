<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true" 
    >

    <RadioGroup
        android:id="@+id/rg_tab"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/RadioButtonBottomTab"
            android:checked="true"
            android:drawableTop="@drawable/icon_home"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rb_poi"
            style="@style/RadioButtonBottomTab"
            android:drawableTop="@drawable/icon_poi"
            android:text="商家" />

        <RadioButton
            android:id="@+id/rb_user"
            style="@style/RadioButtonBottomTab"
            android:drawableTop="@drawable/icon_user"
            android:text="我的" />

        <RadioButton
            android:id="@+id/rb_more"
            style="@style/RadioButtonBottomTab"
            android:drawableTop="@drawable/icon_more"
            android:text="更多" />
    </RadioGroup>

</RelativeLayout>